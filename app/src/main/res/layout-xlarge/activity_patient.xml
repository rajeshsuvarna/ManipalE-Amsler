<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="cards main container">

    <!--top card view starts here-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_pamsler"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_marginTop="20dp"
        card_view:cardBackgroundColor="@color/icons"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true"
        >

        <ImageView
            android:layout_width="750dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:background="@drawable/amslertest"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="445dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >


            <TextView
                android:id="@+id/tvpamslertest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take a Amsler test"
                android:textColor="@color/primary_text"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <!--2nd card view starts here-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_pappoint"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardBackgroundColor="@color/icons"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageViewp2"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:src="@drawable/appoint"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvpappoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book an appointment"
                android:textColor="@color/primary_text"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>


    <!--3rd nd card view starts here-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_pchat"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardBackgroundColor="@color/icons"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageViewp3"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:src="@drawable/chat"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvpchat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat with doctor"
                android:textColor="@color/primary_text"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>
    </LinearLayout>


    </android.support.v7.widget.CardView>


    <!--4th  card view starts here-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_phistory"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardBackgroundColor="@color/icons"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageViewp4"
            android:layout_width="0dp"
            android:layout_height="108dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:src="@drawable/medhis"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/medphistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical History"
                android:textColor="@color/primary_text"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>


    <!--5th  card view starts here-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_plogout"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardBackgroundColor="@color/icons"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageViewp5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/logout"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvplog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/primary_text"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

</ScrollView>
