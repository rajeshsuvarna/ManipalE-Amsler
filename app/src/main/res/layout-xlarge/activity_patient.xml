<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="cards main container">

    <!--top card view starts here-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_pamsler"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="20dp"
        card_view:cardBackgroundColor="@color/primary"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="420dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/tvpamslertest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take a Amsler test"
                android:textColor="@color/icons"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <!--2nd card view starts here-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_pappoint"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardBackgroundColor="@color/primary"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/tvpappoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book an appointment"
                android:textColor="@color/icons"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>


    <!--3rd nd card view starts here-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_pconsult"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardBackgroundColor="@color/primary"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/tvpconsult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consult a doctor"
                android:textColor="@color/icons"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <!--4th  card view starts here-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_phistory"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardBackgroundColor="@color/primary"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/medphistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical History"
                android:textColor="@color/icons"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <!--5th  card view starts here-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_plogout"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardBackgroundColor="@color/primary"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/tvplog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/icons"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

</ScrollView>
