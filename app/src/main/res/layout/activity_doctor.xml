<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:tag="cards main container">

        <!--top card view starts here-->
        <android.support.v7.widget.CardView
            android:id="@+id/card_view_dpatient"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            card_view:cardBackgroundColor="@color/primary"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="8dp"
            card_view:cardUseCompatPadding="true"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/tvviewpat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Patients"
                    android:textColor="@color/icons"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!--2nd card view starts here-->
        <android.support.v7.widget.CardView
            android:id="@+id/card_view_dappoint"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            card_view:cardBackgroundColor="@color/primary"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="8dp"
            card_view:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/tvdappoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Appointments"
                    android:textColor="@color/icons"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
            </LinearLayout>


        </android.support.v7.widget.CardView>


        <!--3rd card view starts here-->
        <android.support.v7.widget.CardView
            android:id="@+id/card_view_dhistory"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            card_view:cardBackgroundColor="@color/primary"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="8dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            card_view:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/tvdmedhis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medical History"
                    android:textColor="@color/icons"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!--4th card view starts here-->
        <android.support.v7.widget.CardView
            android:id="@+id/card_view_dprofile"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            card_view:cardBackgroundColor="@color/primary"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="8dp"
            card_view:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/tvdprof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Profile"
                    android:textColor="@color/icons"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>




        <!--5th card view starts here-->
        <android.support.v7.widget.CardView
            android:id="@+id/card_view_logout"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            card_view:cardBackgroundColor="@color/primary"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="8dp"
            card_view:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/tvlogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="@color/icons"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>








    </LinearLayout>












</ScrollView>