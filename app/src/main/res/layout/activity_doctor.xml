<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:tag="cards main container">

        <!--top card view starts here-->
        <android.support.v7.widget.CardView
            android:id="@+id/card_view_dpatient"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="20dp"
            card_view:cardBackgroundColor="@color/icons"
            card_view:cardElevation="8dp"
            card_view:cardUseCompatPadding="true"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tvdpatient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Patients"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!--2nd card view starts here-->
        <android.support.v7.widget.CardView
            android:id="@+id/card_view_dappoint"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            card_view:cardBackgroundColor="@color/icons"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="8dp"
            card_view:cardUseCompatPadding="true"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tvdappoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Appointments"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>


        <!--3rd card view starts here-->
        <android.support.v7.widget.CardView
            android:id="@+id/card_view_dhistory"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            card_view:cardBackgroundColor="@color/icons"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="8dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            card_view:cardUseCompatPadding="true"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tvdmedhis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medical History"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>



        <!--4th card view starts here-->
        <android.support.v7.widget.CardView
            android:id="@+id/card_view_dprofile"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            card_view:cardBackgroundColor="@color/icons"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="8dp"
            card_view:cardUseCompatPadding="true"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tvdprof"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Profile"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!--5th card view starts here-->
        <android.support.v7.widget.CardView
            android:id="@+id/card_view_logout"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            card_view:cardBackgroundColor="@color/icons"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="8dp"
            card_view:cardUseCompatPadding="true"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/logout"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tvdlogout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>
</ScrollView>